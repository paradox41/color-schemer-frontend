{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "../dist/",
    "pretty": true,
    "rootDir": ".",
    "target": "es5",
    "types": [
      "node",
      "core-js",
      "first-mate",
      "tinycolor"
    ]
  }
}
